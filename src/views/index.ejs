<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>
  <body>
    <%- include('./partials/header.ejs') %>
    <main class="main">
      <section class="section-html">
        <h3 class="encuadro">Basado en tu ultima visita o nuevos productos</h3>
        <!-- HACER UN FOR PARA CADA CARD -->

        <% productos.forEach(producto => { %>
          <a href="/products/<%=producto.id%>/edit">
        <div class="ver">
          <img
            class="imagenProducto"
            src="img/products/<%= producto.image %> "
            alt="alt"
          />
          <article>
            <div class="pdp">
              <p class="precio">$<%= producto.price %></p>
              <p class="producto"><%= producto.name %></p>
              <p class="descuento"><%= producto.description %></p>
            </div>
          </article>
        </div>
      </a>
        <% }) %>
      </section>
    </main>
  </body>
</html>
