<html lang="en" class="html-register">
  <%- include('./partials/head.ejs') %>

  <body>
    <%- include('./partials/header.ejs') %>
    <ul class="errores"></ul>
    <form
      class="formulario"
      action="/users/register"
      method="POST"
      enctype="multipart/form-data"
    >
      <h4 class="TituloRegister">Crea tu cuenta!</h4>
      <div class="caja">
        <label for="NombreApellido"> Nombre </label><br />
        
        <input class="register" 
          id="first_name_val"
          type="text"
          name="first_name"
          placeholder="Insert your name"
          value="<%= locals.old && old.first_name %>"
        />
        <% if (locals.errors && errors.first_name) { %>
        <p class="feedback"><%= errors.first_name.msg %></p>
        <% } %> 
      </div>
      <div class="caja">
        <label for="NombreApellido"> Apellido </label><br/>
        
        <input class="register" 
          type="text"
          id="last_name_val"
          name="last_name"
          placeholder="Insert your name"
          value="<%= locals.old && old.last_name %>"
        />
        <% if (locals.errors && errors.last_name) { %>
        <p class="feedback"><%= errors.last_name.msg %></p>
        <% } %>
      </div>

      <div class="caja">
        <label for="Email">Email</label><br /><input class="register" 
          type="email"
          id="email_val"
          name="email"
          id="Email"
          placeholder="Insert your email"
          value="<%= locals.old && old.email %>"
        />
        <% if (locals.errors && errors.email) { %>
        <p class="feedback"><%= errors.email.msg %></p>
        <% } %>
      </div>
      <div class="caja">
        <label for="password">Contraseña</label><br /><input class="register"
          type="password"
          name="password"
          id="password_val"
          placeholder="Insert your password"
          value="<%= locals.old && old.password %>"
        />
        <% if (locals.errors && errors.password) { %>
        <p class="feedback"><%= errors.password.msg %></p>
        <% } %>
      </div>

      <div class="caja">
        <label> Imagen de perfil: </label> 
        <br>
        <input class="register" 
          type="file"
          id="image_val"
          name="avatar"
          accept=".jpg, .jpeg, .png"
        />
      </div>
      <div><input class="boton" type="submit" placeholder="Registrarme" value="Register!"/></div>
      <div class="tenesCuenta"><a href="/users/login">¿Ya eres usuario?</a></div>
    </form>
  </body>
</html>